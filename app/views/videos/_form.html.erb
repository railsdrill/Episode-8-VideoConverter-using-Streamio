  </div>

  <div class="field">
    <%= form.label :video_format %>
    <%= form.select(:video_format, ["mp4", "mov", "f4v"] )%>
  </div>

  <div class="field">
    <%= form.label :resolution %>
    <%= form.select(:resolution, ["1920x1080", "1280x720", "854x480"]) %>
